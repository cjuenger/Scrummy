@using Radzen.Blazor
@using Radzen

<RadzenCard Style="width:1010px;">

    <h3>@Title Burn-Down-Chart</h3>
    
    <RadzenChart>

        @* Burn down *@
        <RadzenLineSeries Smooth="@_smooth"
                          Data="@_burnDownChartData.BurnDownSeries"
                          Title="Burn Down"
                          CategoryProperty="X"
                          ValueProperty="Y">
            <RadzenMarkers MarkerType="MarkerType.None"/>
        </RadzenLineSeries>
        
        @* Average estimate *@
        <RadzenLineSeries Smooth="@_smooth"
                          Data="@_burnDownChartData.EstimateSeries"
                          CategoryProperty="X"
                          Title="Estimate"
                          LineType="LineType.Dashed"
                          ValueProperty="Y">
            <RadzenMarkers MarkerType="MarkerType.None"/>
            
        </RadzenLineSeries>
        
        @* Best estimate *@
        <RadzenLineSeries Smooth="@_smooth"
                          Data="@_burnDownChartData.BestEstimateSeries"
                          CategoryProperty="X"
                          Title="Best Estimate"
                          LineType="LineType.Dashed"
                          ValueProperty="Y">
            <RadzenMarkers MarkerType="MarkerType.None"/>
                    
        </RadzenLineSeries>

        @* Worst estimate *@
        <RadzenLineSeries Smooth="@_smooth"
                          Data="@_burnDownChartData.WorstEstimateSeries"
                          CategoryProperty="X"
                          Title="Worst Estimate"
                          LineType="LineType.Dashed"
                          ValueProperty="Y">
            <RadzenMarkers MarkerType="MarkerType.None"/>
                            
        </RadzenLineSeries>
        
        @* Due line *@
        <RadzenLineSeries Smooth="@_smooth"
                          Data="@_dueLine"
                          CategoryProperty="X"
                          Title="Due Date"
                          LineType="LineType.Dashed"
                          ValueProperty="Y">
            <RadzenMarkers MarkerType="MarkerType.None"/>
                            
        </RadzenLineSeries>
        
        <RadzenCategoryAxis Padding="20" FormatString="{0:MMM}"/>

        <RadzenValueAxis Max="@_maxYValue" Min="0" Step="5">
            <RadzenGridLines Visible="true"/>
            <RadzenAxisTitle Text="Story Points"/>
        </RadzenValueAxis>
    </RadzenChart>
    
</RadzenCard>