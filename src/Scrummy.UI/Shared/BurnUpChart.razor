@using Radzen.Blazor
@using Radzen

<RadzenCard Style="width:500px;">

    <h3>Burn-Up-Chart</h3>
    
    <RadzenChart>
        <RadzenLineSeries Smooth="@_smooth"
                          Data="@_opened"
                          CategoryProperty="X"
                          Title="Opened"
                          ValueProperty="Y">
            <RadzenMarkers MarkerType="MarkerType.None" />
        </RadzenLineSeries>
        <RadzenLineSeries Smooth="@_smooth"
                          Data="@_burnUp"
                          CategoryProperty="X"
                          Title="Closed"
                          ValueProperty="Y">
            <RadzenMarkers MarkerType="MarkerType.None" />
        </RadzenLineSeries>
    
        <RadzenCategoryAxis Padding="20" FormatString="{0:MMM}" />
    
        <RadzenValueAxis>
            <RadzenGridLines Visible="true" />
            <RadzenAxisTitle Text="Story Points" />
        </RadzenValueAxis>
    </RadzenChart>
    
</RadzenCard>